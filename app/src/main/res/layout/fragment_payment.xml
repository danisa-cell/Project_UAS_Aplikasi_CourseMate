<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <!-- HEADER -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#3A3A4D"
            android:padding="16dp">

            <ImageView
                android:id="@+id/btnBackPayment"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_back"
                android:tint="#FFFFFF"
                android:layout_alignParentStart="true" />

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_headergraduation"
                    android:tint="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ORDER"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </RelativeLayout>

        <!-- CONTENT AREA -->
        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Gambar Course -->
            <ImageView
                android:id="@+id/imgCoursePayment"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="16dp"
                android:background="#EEEEEE"
                android:scaleType="centerCrop"
                android:layout_marginTop="8dp"
                android:radius="18dp" />

            <!-- Judul -->
            <TextView
                android:id="@+id/txtPaymentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belajar Kotlin"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Tutor -->
            <TextView
                android:id="@+id/txtPaymentTutor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mr. Sigit"
                android:textSize="15sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />

            <!-- PRICE -->
            <TextView
                android:id="@+id/txtPaymentPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 150.000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp" />

            <!-- Quantity Button -->
            <LinearLayout
                android:id="@+id/qtyContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btnMinus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/btn_qty"
                    android:src="@drawable/ic_minus"
                    android:padding="4dp"
                    android:contentDescription="minus" />

                <TextView
                    android:id="@+id/txtQty"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="1"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <ImageButton
                    android:id="@+id/btnPlus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/btn_qty"
                    android:src="@drawable/ic_plus"
                    android:padding="4dp"
                    android:contentDescription="plus" />

            </LinearLayout>


            <!-- Garis -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_marginTop="20dp" />

            <!-- Rincian Pembayaran -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rincian Pembayaran"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Subtotal Item" />

                <TextView
                    android:id="@+id/txtSubtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp. 150.000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Discount" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0" />
            </LinearLayout>

            <!-- Garis -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_marginTop="20dp" />

            <!-- TOTAL -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Total Pesanan"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtTotalPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp. 150.000"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- BUTTON PAY NOW -->

        </LinearLayout>

    </LinearLayout>
</ScrollView>
