<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_profile">

    <!-- SCROLL BAGIAN PROFILE -->

    <!-- BOTTOM NAVIGATION (SELALU DI BAWAH) -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="636dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_profile"
            android:orientation="vertical"
            android:paddingBottom="80dp"> <!-- biar tidak ketutup navbar -->


            <!-- HEADER PROFILE -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="#4C4D63"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:shadowColor="#000000"
                    android:shadowDx="1"
                    android:shadowDy="44"
                    android:shadowRadius="9"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- FOTO PROFIL -->
            <ImageView
                android:layout_width="99dp"
                android:layout_height="97dp"
                android:layout_gravity="center"
                android:layout_marginTop="-55dp"
                android:shadowColor="#0000"
                android:shadowDx="1"
                android:shadowDy="34"
                android:shadowRadius="19"
                android:src="@drawable/ic_profile_nav" />

            <!-- TEXT FULL NAME -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:textColor="@android:color/black"
                android:text="Hallo, ini daftar profile kamu"

                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- INPUT FULLNAME -->
            <LinearLayout
                android:id="@+id/tvProfileName"
                android:layout_width="330dp"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/input_box"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp">  <!-- SAMA SEPERTI LOGIN -->

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_user"
                    android:tint="#5555" />

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:background="@android:color/transparent"
                    android:hint="Full Name"
                    android:textColor="#000"
                    android:textColorHint="#888" />
            </LinearLayout>

            <!-- INPUT PASSWORD -->
            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="18dp"
                android:background="@drawable/input_box"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_password"
                     />

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColor="#000"
                    android:textColorHint="#888" />

                <ImageView
                    android:id="@+id/btnShowPassword"
                    android:layout_width="32dp"
                    android:layout_height="33dp"
                    android:src="@drawable/ic_eye_off"
                    android:tint="#555" />
            </LinearLayout>

            <!-- BUTTON LOGOUT -->
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:backgroundTint="#000000"
                android:text="Logout"
                android:textColor="@android:color/white" />  <!-- PAKAI STYLE LOGIN -->

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/navHome"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="51dp"
                android:layout_height="52dp"
                android:src="@drawable/ic_home" />

            <TextView
                android:id="@+id/textHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="2dp"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/navHistory"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="51dp"
                android:src="@drawable/ic_history" />

            <TextView
                android:id="@+id/textHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/navCourse"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="51dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_book" />

            <TextView
                android:id="@+id/textMyCourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MyCourse"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="61dp"
                android:layout_height="48dp"
                android:src="@drawable/profile" />

            <TextView
                android:id="@+id/textProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
